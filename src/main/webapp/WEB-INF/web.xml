<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Newsstand</display-name>
    
    <resource-ref>
        <description>mysql db connection</description>
        <res-ref-name>jdbc/mysql</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    
    <!--<welcome-file-list>-->
        <!--<welcome-file>/WEB-INF/main.jsp</welcome-file>-->
    <!--</welcome-file-list>-->

    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>com.newsstand.servlets.Servlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!--Filters-->

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.newsstand.filter.EncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--Error pages-->

    <!--Missing resource-->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error/error404.jsp</location>
    </error-page>

    <!--Unauthorized-->
    <error-page>
        <error-code>401</error-code>
        <location>/WEB-INF/error/error401.jsp</location>
    </error-page>

    <!--Forbidden-->
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/error/error403.jsp</location>
    </error-page>

</web-app>